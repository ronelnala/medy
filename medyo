      <div class="card-content text-center">
        <h1 style="font-size: 1.5rem; font-weight: bold; margin-bottom: 1rem;">Welcome to Boat Travels</h1>
        <button class="btn" id="book-now-btn">Book Now</button>
      </div>
    </div>
    
    <!-- Login Page -->
    <div class="page" id="login-page">
      <div class="card-header">
        <h2 class="card-title">Login</h2>
      </div>
      <div class="card-content">
        <div class="space-y-4">
          <div class="form-group">
            <label class="form-label">Username</label>
            <input type="text" id="username" class="form-input" placeholder="Enter username">
          </div>
          <div class="form-group">
            <label class="form-label">Password</label>
            <input type="password" id="password" class="form-input" placeholder="Enter password">
          </div>
          <button class="btn" id="login-btn">Login</button>
        </div>
      </div>
    </div>
    
    <!-- Instructions Page -->
    <div class="page" id="instructions-page">
      <div class="card-header">
        <h2 class="card-title">Booking Instructions</h2>
      </div>
      <div class="card-content">
        <div class="alert">
          <div class="alert-title">Important Information</div>
          <div class="alert-description">
            Welcome to our Boat Ticketing System. Please follow these steps:
            <br>1. Select your destination
            <br>2. Choose departure details
            <br>3. Enter passenger information
            <br>4. Select payment method
            <br>5. Confirm and receive receipt
          </div>
        </div>
        <button class="btn mt-4" id="proceed-btn">Proceed</button>
      </div>
    </div>
    
    <!-- Destination Page -->
    <div class="page" id="destination-page">
      <div class="card-header">
        <h2 class="card-title">Select Destination</h2>
      </div>
      <div class="card-content">
        <div class="space-y-4">
          <button class="btn btn-outline" data-name="Marabut Samar" data-price="200">Marabut Samar - ₱200</button>
          <button class="btn btn-outline" data-name="Basey Samar" data-price="100">Basey Samar - ₱100</button>
          <button class="btn btn-outline" data-name="San Antonio" data-price="50">San Antonio - ₱50</button>
          <button class="btn mt-4" id="destination-next-btn" disabled>Next</button>
        </div>
      </div>
    </div>
    
    <!-- Departure Page -->
    <div class="page" id="departure-page">
      <div class="card-header">
        <h2 class="card-title">Departure Details</h2>
      </div>
      <div class="card-content">
        <div class="space-y-4">
          <div class="form-group">
            <label class="form-label">Destination</label>
            <input type="text" id="selected-destination" class="form-input" readonly>
          </div>
          <div class="form-group">
            <label class="form-label">Date</label>
            <input type="date" id="departure-date" class="form-input">
