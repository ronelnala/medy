  <script>
    // App State
    const appState = {
      currentPage: 'home',
      loginData: { username: '', password: '' },
      destination: null,
      departureDetails: { date: '', time: '' },
      passengerDetails: {
        firstName: '',
        middleInitial: '',
        lastName: '',
        passengers: 1
      },
      paymentMethod: ''
    };

    // Navigation function
    function navigateTo(page) {
      // Hide all pages
      document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
      
      // Show the selected page
      document.getElementById(`${page}-page`).classList.add('active');
      
      // Update current page in state
      appState.currentPage = page;
    }

    // Home Page
    document.getElementById('book-now-btn').addEventListener('click', () => {
      navigateTo('login');
    });

    // Login Page
    document.getElementById('login-btn').addEventListener('click', () => {
      appState.loginData.username = document.getElementById('username').value;
      appState.loginData.password = document.getElementById('password').value;
      
      // Simple validation
      if (appState.loginData.username && appState.loginData.password) {
        navigateTo('instructions');
      } else {
        alert('Please enter both username and password');
      }
    });

    // Instructions Page
    document.getElementById('proceed-btn').addEventListener('click', () => {
      navigateTo('destination');
    });

    // Destination Page
    const destinationButtons = document.querySelectorAll('#destination-page .btn-outline');
    const destinationNextBtn = document.getElementById('destination-next-btn');
    
    destinationButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Remove active class from all destination buttons
        destinationButtons.forEach(btn => btn.classList.remove('btn-active'));
        
        // Add active class to the clicked button
        button.classList.add('btn-active');
        
        // Update app state
        appState.destination = {
          name: button.getAttribute('data-name'),
          price: parseInt(button.getAttribute('data-price'))
        };
        
        // Enable next button
        destinationNextBtn.disabled = false;
      });
    });
    
    destinationNextBtn.addEventListener('click', () => {
      // Update display values on departure page
      document.getElementById('selected-destination').value = appState.destination.name;
      document.getElementById('price-display').value = `₱${appState.destination.price} per person`;
      
      navigateTo('departure');
    });

    // Departure Page
    const departureDate = document.getElementById('departure-date');
    const departureTime = document.getElementById('departure-time');
    const departureNextBtn = document.getElementById('departure-next-btn');
    
    function checkDepartureForm() {
      departureNextBtn.disabled = !(departureDate.value && departureTime.value);
    }
    
    departureDate.addEventListener('change', () => {
      appState.departureDetails.date = departureDate.value;
      checkDepartureForm();
    });
    
    departureTime.addEventListener('change', () => {
      appState.departureDetails.time = departureTime.value;
      checkDepartureForm();
    });
    
    departureNextBtn.addEventListener('click', () => {
      navigateTo('passengers');
    });

    // Passenger Details Page
    const firstName = document.getElementById('first-name');
    const middleInitial = document.getElementById('middle-initial');
    const lastName = document.getElementById('last-name');
    const passengerCount = document.getElementById('passenger-count');
    const passengerNextBtn = document.getElementById('passenger-next-btn');
    
    function checkPassengerForm() {
      passengerNextBtn.disabled = !(firstName.value && lastName.value && passengerCount.value >= 1);
    }
    
    firstName.addEventListener('input', () => {
      appState.passengerDetails.firstName = firstName.value;
      checkPassengerForm();
    });
    
    middleInitial.addEventListener('input', () => {
      appState.passengerDetails.middleInitial = middleInitial.value;
    });
    
    lastName.addEventListener('input', () => {
      appState.passengerDetails.lastName = lastName.value;
      checkPassengerForm();
    });
    
    passengerCount.addEventListener('input', () => {
      appState.passengerDetails.passengers = parseInt(passengerCount.value);
      checkPassengerForm();
    });
    
    passengerNextBtn.addEventListener('click', () => {
      navigateTo('payment');
    });

    // Payment Page
    const paymentMethod = document.getElementById('payment-method');
    const paymentNextBtn = document.getElementById('payment-next-btn');
    
    paymentMethod.addEventListener('change', () => {
      appState.paymentMethod = paymentMethod.value;
      paymentNextBtn.disabled = !paymentMethod.value;
    });
    
    paymentNextBtn.addEventListener('click', () => {
      // Calculate total price
      const totalPrice = appState.passengerDetails.passengers * appState.destination.price;
      
      // Update receipt page with all information
      document.getElementById('receipt-username').textContent = appState.loginData.username;
      document.getElementById('receipt-destination').textContent = appState.destination.name;
      document.getElementById('receipt-price').textContent = `₱${appState.destination.price} per person`;
      document.getElementById('receipt-date').textContent = appState.departureDetails.date;
      document.getElementById('receipt-time').textContent = appState.departureDetails.time;
      document.getElementById('receipt-name').textContent = `${appState.passengerDetails.firstName} ${appState.passengerDetails.middleInitial ? appState.passengerDetails.middleInitial + '.' : ''} ${appState.passengerDetails.lastName}`;
      document.getElementById('receipt-passenger-count').textContent = appState.passengerDetails.passengers;
      document.getElementById('receipt-payment').textContent = appState.paymentMethod;
      document.getElementById('receipt-total').textContent = `₱${totalPrice}`;
      
      navigateTo('receipt');
    });

    // Receipt Page
    document.getElementById('restart-btn').addEventListener('click', () => {
      // Reset form fields
      document.getElementById('username').value = '';
      document.getElementById('password').value = '';
      
      destinationButtons.forEach(btn => btn.classList.remove('btn-active'));
      
      document.getElementById('departure-date').value = '';
      document.getElementById('departure-time').value = '';
      
      document.getElementById('first-name').value = '';
      document.getElementById('middle-initial').value = '';
      document.getElementById('last-name').value = '';
      document.getElementById('passenger-count').value = '1';
      
      document.getElementById('payment-method').value = '';
      
      // Reset state
      appState.loginData = { username: '', password: '' };
      appState.destination = null;
      appState.departureDetails = { date: '', time: '' };
      appState.passengerDetails = {
        firstName: '',
        middleInitial: '',
        lastName: '',
        passengers: 1
      };
      appState.paymentMethod = '';
      
      // Go back to home
      navigateTo('home');
    });
  </script>
</body>
</html>
